    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug development",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_development.dart",
            "args": [
                "--flavor",
                "dev",
                "--target",
                "lib/main_development.dart",
                "--debug",
                "--web-port=5000"
            ]
        },
        {
            "name": "Debug staging",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_staging.dart",
            "args": [
                "--flavor",
                "stg",
                "--target",
                "lib/main_staging.dart",
                "--debug",
                "--web-port=5000"
            ]
        },
        {
            "name": "Debug production",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_production.dart",
            "args": [
                "--flavor",
                "prod",
                "--target",
                "lib/main_production.dart",
                "--debug",
                "--web-port=5000"
            ]
        },
